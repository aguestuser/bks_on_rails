.profile 
  .row
    .span6.offset3
      = form_for @rider do |f|
        = render 'fields', f: f
        = render 'shared/error_messages', object: f.object
        - if params[:action] == 'new' || params[:action] == 'create'
          = render 'accounts/fields', f: f
        = render 'contacts/fields', f: f
        = render 'locations/fields', f: f
        = render 'rider_ratings/fields', f: f if can? :edit, RiderRating
        = render 'qualification_sets/fields', f: f if can? :edit, QualificationSet
        = render 'skill_sets/fields', f: f if can? :edit, SkillSet
        = render 'equipment_sets/fields', f: f
        %br/
        %br/
        .center
          - button_text = params[:action] == 'new' ? 'Create Rider' : 'Save Changes' 
          = f.submit button_text, class: "btn btn-large btn-primary" 
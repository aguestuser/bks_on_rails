%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "bk shift on rails", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          - if signed_in?
            - if credentials == 'Staffer'
              %li= link_to 'Shifts',      shifts_path
              %li= link_to 'Restaurants', restaurants_path
              %li= link_to 'Riders',      riders_path
              %li= link_to 'Staffers',    staffers_path
              %li#fat-menu.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Account
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Homepage", current_account.user
                  %li= link_to "Settings", edit_staffer_path(current_account.user.id) 
                  %li= link_to 'Manual',   manual_path
                  %li.divider
                  %li= link_to "Sign out", sign_out_path, method: 'delete'
            - elsif credentials == 'Manager'
              %li#fat-menu.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Account
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Homepage", current_account.user
                  %li= link_to "Settings", edit_account_path(current_account) 
                  %li.divider
                  %li= link_to "Sign out", sign_out_path, method: 'delete'
          - else 
            %li= link_to "Sign in", sign_in_path


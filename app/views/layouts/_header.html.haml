%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "bk shift on rails", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          - if signed_in?

            - if credentials == 'Staffer'
              = render 'nav/links_staffer'
              = render 'nav/dropdown'
            
            - elsif credentials == 'Manager'
              = render 'nav/links_manager'
              = render 'nav/dropdown'

            - elsif credentials == 'Rider'
              = render 'nav/links_rider'
              = render 'nav/dropdown'
         
          - else 
            %li= link_to "Sign in", sign_in_path


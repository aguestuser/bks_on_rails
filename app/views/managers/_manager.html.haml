- if manager == managers.first
  %h3 Managers
%ul
  %li
    %strong Name:
    = manager.account.contact.name
  %li
    %strong Title:
    = manager.account.contact.title  
  %li
    %strong Phone:
    = manager.account.contact.phone
  %li
    %strong Email:
    = manager.account.contact.email
  = link_to 'Edit', edit_restaurant_manager_path(restaurant_id: manager.restaurant.id, id: manager.id), id: "edit_manager_#{manager.id}"
  |
  = link_to 'Delete', manager_path(manager.id), id: "delete_manager_#{manager.id}", method: :delete, data: { confirm: "Are you sure? All information associated with #{manager.account.contact.name} will be permanently destroyed!" }
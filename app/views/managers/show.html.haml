- provide(:title, @manager.contact.name)
.profile
  .row
    .span10.offset1
      = gravatar_for @manager, size: 80
      %section
        %h1.name= @manager.contact.name
        %h2.title
          #{@manager.contact.title} | #{@manager.restaurant.name}
  .row
    .span10.offset1
      %h3 Contact Info
      %ul
        %li 
          %strong 
            Phone: 
          = @manager.contact.phone
        %li 
          %strong
            Email: 
          = @manager.contact.email
  .row
    %p.center
    - if can? :manage, Manager
      = link_to 'Edit', edit_manager_path(@manager)
      | 
      = link_to "Delete", @manager, method: :delete, data: { confirm: "Are you sure? All information associated with #{@manager.name} will be permanently destroyed!" }
      |
    = link_to @manager.restaurant.mini_contact.name, restaurant_path(@manager.restaurant)      


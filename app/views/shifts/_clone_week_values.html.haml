- #args: shift, i, j
- prefix = "restaurant_shifts[][shifts][]"
- id_prefix = "restaurant_shifts__shifts__"


%div{ id: "shift_#{shift_index}", :class => "clone_week_entry"}
  .row.values
    /Start
    .span4.start
      = label_tag :start, 'Start:'
      = shift.formal_start_time_with_day
      = hidden_field_tag "#{prefix}[start]", shift.start
    /End
    .span4.end
      = label_tag :start, 'End:'
      / = shift.short_end_time
      = shift.formal_end_time_with_day
      = hidden_field_tag "#{prefix}[end]", shift.end
    /Restaurant ID
    = hidden_field_tag "#{prefix}[restaurant_id]", shift.restaurant.id
    /Buttons
    / Edit
    %a{ id: "edit_restaurant_#{rest_index}_shift_#{shift_index}" }
      Edit
    |
    /Remove
    %a{ id: "remove_restaurant_#{rest_index}_shift_#{shift_index}"}
      Remove


    
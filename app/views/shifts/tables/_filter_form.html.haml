.row.header
  Filters
= form_tag shifts_path, method: :get do
  .row
    .span2
      = label_tag 'start', 'Start'
      = select_date @filters[:start], prefix: 'filters[start]' #'filter_start'
    .span2
      = label_tag 'end', 'End'
      = select_date @filters[:end], prefix: 'filters[end]'# 'filter_end'
  .row.center
    = submit_tag 'Filter', class: 'btn btn-primary'
- #args: header, action, fields

%h1 #{header}
.span8.offset2.profile
  = form_tag action, method: :post do
    = render 'shared/batch_error_messages', errors: @errors
    - @shifts.each_with_index do |shift, i|
      - id_str = shift.id ? "shift_#{shift.id}_wrapper" : "shift_nil_#{i}_wrapper"  
      %div{ id: id_str }
        %h3 Shift #{i+1}
        = render fields, shift: shift, new_shift: false
    = render 'shared/base_path_field'
    = render 'shared/filter_json_fields'
    %p.center
      = submit_tag 'Save changes', class: 'btn btn-primary'
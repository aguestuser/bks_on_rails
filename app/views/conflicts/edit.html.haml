- case @caller
- when :rider
  %h1 Edit Conflict for #{@rider.contact.name}
- when nil
  %h1 Edit Conflict
.row
  .span6.offset3
    = form_for @form_args do |f|
      = render 'conflicts/fields', f: f
      .center
        = f.submit "Save changes", class: "btn btn-primary"
        = link_to 'Delete', conflict_path(@conflict, base_path: @base_path), method: :delete, data: { confirm: 'Are you sure?' }, base_path: @base_path, class: "btn btn-primary"
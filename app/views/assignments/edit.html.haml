- provide(:title, 'Edit Shift Assignment')
%h1 Edit Shift Assignment
.row
  .span6.offset3
    %strong
      Shift:
    %p.shift_box
      = render 'assignments/shift_include', shift: @assignment.shift
    = form_for @form_args do |f|
      = render 'send_email_check_box', selected: true
      = render 'shared/error_messages', object: f.object
      = render 'assignments/fields', f: f, shift: @shift
      = render 'shared/base_path_field'
      = render 'shared/filter_json_fields'
      .center
        = f.submit "Save changes", class: "btn btn-primary"

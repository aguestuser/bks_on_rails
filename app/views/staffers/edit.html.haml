- provide(:title, 'Create Staffer')
%h1 Edit #{@staffer.name}'s Profile
.row
  .span6.offset3
    = form_for(@staffer) do |form|
      = render 'shared/error_messages', object: form.object
      = render 'shared/contact_info_fields', form: form, object: form.object
      = form.submit "Save changes", class: "btn btn-large btn-primary"
    = gravatar_for @staffer, size: 80
    = link_to 'Edit avatar', 'http://gravatar.com/emails', target: '_blank'